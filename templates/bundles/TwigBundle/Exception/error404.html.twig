{% extends '/layout.html.twig' %}

{% block title %}SnowTricks - Browse the list of tricks{% endblock %}

{% block content %}
    <div class="user-page">

        <section class="ftco-section user-page-section">

            <div class="container bg-light user-page-box">

                <div class="row d-flex heading">
                    <div class="col ftco-animate text-center">
                        <h1>404</h1>
                        <h2 class="subheading">Page not found</h2>
                    </div>
                </div>

                <div class="row d-flex form">

                    <div class="col ftco-animate text-center">

                        <p>
                            Sorry ! The requested page couldn't be located. Checkout for any URL
                            misspelling or <a href="{{ path('home') }}">return to the homepage</a>.
                        </p>

                    </div>

                </div>

            </div>

        </section>

    </div>



{% endblock %}


