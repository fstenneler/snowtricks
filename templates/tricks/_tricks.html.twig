{% for trick in trick_list %}
    <div class="col-xl-2dot4 col-lg-3 col-md-4 col-sm-6 d-flex ftco-animate">
        <div class="blog-entry justify-content-end">
            <a href="{{ path('single_trick', {trickSlug: trick.slug}) }}" class="block-20" style="background-image: url('/gallery/{{ trick.mediaHeader }}');"></a>
            <div class="text p-4 float-right d-block">
                <div class="trick-heading">
                    <div class="trick-title">
                        <h3 class="heading mt-2">
                            <a href="{{ path('single_trick', {trickSlug: trick.slug}) }}">{{ trick.name }}</a>
                        </h3>
                    </div>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <div class="trick-links">
                        <a href="{{ path('edit_trick', {trickSlug: trick.slug, action: 'edit'}) }}" class="oi oi-pencil"></a>
                        <span class="oi oi-trash js-delete-trick" data-url-confirmation="{{ path('edit_trick', {trickSlug: trick.slug, action: 'confirm_deletion'}) }}"></span>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endfor %}
