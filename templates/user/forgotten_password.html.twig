{% extends 'layout.html.twig' %}

{% block title %}SnowTricks - Sign in{% endblock %}

{% block content %}
    
    <div class="user-page">

        <section class="ftco-section">

            <div class="container bg-light">

                <div class="row d-flex heading">
                    <div class="col ftco-animate text-center">
                        <h1>
                            <a href="{{ path('app_login')}}">Forgot password</a>
                        </h1>
                        <h2 class="subheading">Reset your password</h2>
                    </div>
                </div>

                <div class="row d-flex form">

                    <div class="col ftco-animate text-center">

                        <form method="post">
                            
                            {% for message in app.flashes('success') %}
                                <div class="alert alert-success">
                                    {{ message }}
                                </div>
                            {% endfor %}
                            
                            {% for message in app.flashes('error') %}
                                <div class="alert alert-danger">
                                    {{ message }}
                                </div>
                            {% endfor %}

                            <div class="form-group">
                                <label for="inputEmail">Email</label>
                                <input type="text" name="email" id="inputEmail" class="form-control" placeholder="Enter your email address" required autofocus>
                            </div>

                            <button class="btn btn-lg btn-primary" type="submit">Ask for reset</button>

                        </form>

                    </div>

                </div>

            </div>

        </section>

    </div>


{% endblock %}
