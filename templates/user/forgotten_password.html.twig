{% extends 'layout.html.twig' %}

{% block title %}SnowTricks - Forgot password{% endblock %}

{% block content %}
    
    <div class="user-page">

        <section class="ftco-section user-page-section">

            <div class="container bg-light user-page-box">

                <div class="row d-flex heading">
                    <div class="col ftco-animate text-center">
                        <h1>
                            <a href="{{ path('app_login')}}">Forgot password</a>
                        </h1>
                        <h2 class="subheading">Reset your password</h2>
                    </div>
                </div>

                <div class="row d-flex form">

                    <div class="col ftco-animate text-center">

                        {{ form_start(form) }}
                            
                            {% for message in app.flashes('success') %}
                                <div class="alert alert-success">
                                    {{ message }}
                                </div>
                            {% endfor %}
                            
                            {% for message in app.flashes('error') %}
                                <div class="alert alert-danger">
                                    {{ message }}
                                </div>
                            {% endfor %}

                            {{ form_row(form.email, { 'attr': { 'placeholder': 'Enter your email address' }}) }}

                            <button class="btn btn-lg btn-primary" type="submit">Ask for reset</button>

                        {{ form_end(form) }}

                    </div>

                </div>

            </div>

        </section>

    </div>


{% endblock %}
